#include <iostream>
using namespace std;
int sum(int a,int b)
{
	int c = 0;
	if (a > 0)
	{
		for (int i = a; i > b; i--)
		{
			c += a;
		}
		
	}
	else
	{
		for (int i = a; i < b; i++)
		{
			c += b;
		}
		
	}
	return c;
}
int main()
{
	setlocale(LC_ALL, "rus");
	int a = 7;
	int b = 3;
	cout <<"Сумма диапозона " << a << " - "<< b << " = " << sum(a, b);
}

